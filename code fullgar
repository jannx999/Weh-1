# Menüdarstellung - Auflistung der Fahrtrichtungen
print(16*"#","MENÜ",16*"#")
print()
print(" vorwärts: 		fwd")
print(" rückwärts: 		bwd")
print(" linksdrehen: 		left")
print(" rechtsdrehen: 		right")
print()
print(38*"#")
